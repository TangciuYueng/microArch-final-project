<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.tongji.musicListen.mapper.MusicCommentMapper">
    <insert id="insertMusicComment" parameterType="cn.edu.tongji.musicListen.model.MusicComment">
        INSERT INTO music_comment (sender_id, music_id, context, send_time, likes)
        VALUES (#{sender_id}, #{music_id}, #{context}, #{send_time}, #{likes})
    </insert>
    <update id="updateMusicComment" parameterType="cn.edu.tongji.musicListen.model.MusicComment">
        UPDATE music_comment
        <set>
            <if test="sender_id != null">sender_id = #{sender_id},</if>
            <if test="music_id != null">music_id = #{music_id},</if>
            <if test="context != null">context = #{context},</if>
            <if test="send_time != null">send_time = #{send_time},</if>
            <if test="likes != null">likes = #{likes},</if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="deleteMusicComment" parameterType="int">
        DELETE FROM music_comment
        WHERE id = #{id}
    </delete>
    <select id="selectMusicCommentById" parameterType="int" resultType="cn.edu.tongji.musicListen.model.MusicComment">
        SELECT id, sender_id, music_id, context, send_time, likes
        FROM music_comment
        WHERE id = #{id}
    </select>
    <select id="getAllMusicCommentCount" resultType="int">
        SELECT COUNT(*)
        FROM music_comment
    </select>
    <select id="getMusicCommentByPage" resultType="cn.edu.tongji.musicListen.model.MusicComment">
        SELECT *
        FROM music_comment
        LIMIT #{startIndex}, #{pageSize}
    </select>
<!--    <select id="getThisMusicCommentCount" resultType="java.lang.Integer">-->
<!--        -->
<!--    </select>-->
</mapper>
